{
    // https://github.com/yaniswang/HTMLHint/wiki/Rules
    // can't parse this file? use JSON5!

    // --------------------------------------------------------------------
    // HTMLHint Configuration, Strict Edition
    // --------------------------------------------------------------------

    // == Standard ========================================================
    "tagname-lowercase"            : true,    // Tagname must be lowercase
    "attr-lowercase"               : true,    // Attribute name must be lowercase
    "attr-value-double-quotes"     : true,    // Attribute value must closed by double quotes
    "attr-value-not-empty"         : true,    // Attribute must set value
    "doctype-first"                : true,    // Doctype must be first
    "tag-pair"                     : true,    // Tag must be paired
    "tag-self-close"               : true,    // The empty tag must closed by self
    "spec-char-escape"             : true,    // Special characters must be escaped
    "id-unique"                    : true,    // Id must be unique
    "src-not-empty"                : true,    // Src of img(script,link) must set value

    // == Performance =====================================================
    "head-script-disabled"         : true,    // The script tag can not be used in head

    // == Accessibility ===================================================
    "img-alt-require"              : true,    // Alt of img tag must be set value

    // == Specification ===================================================
    "doctype-html5"                : true,    // Doctype must be html5
    "style-disabled"               : true,    // Id and class value must meet some rules: underline, dash, hump
    "id-class-value"               : "dash",  // Style tag can not be use
}
